<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#193449"
    tools:context=".RegistrationFragment">

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/allerta"
        android:text="Phone number"
        android:textColor="#F8F8F8"
        android:textColorHighlight="#2674B3"
        android:textColorLink="#2395C8"
        android:textSize="20sp"


        />

    <EditText
        android:id="@+id/phoneHolder"
        android:layout_width="276dp"
        android:layout_height="46dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="#673AB7"
        android:ems="10"
        android:inputType="phone" />

    <TextView
        android:id="@+id/adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="180dp"
        android:fontFamily="@font/allerta"
        android:text="Adress"
        android:textColor="#F8F8F8"
        android:textColorHighlight="#2674B3"
        android:textColorLink="#2395C8"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/countries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:fontFamily="@font/allerta"
                android:text="Country"
                android:textColor="#F8F8F8"
                android:textColorHighlight="#2674B3"
                android:textColorLink="#2395C8"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner_countries"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#673AB7"
                android:ems="10"
                android:entries="@array/dropdown_countries"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/states"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:fontFamily="@font/allerta"
                android:text="State"
                android:textColor="#F8F8F8"
                android:textColorHighlight="#2674B3"
                android:textColorLink="#2395C8"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner_states"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#673AB7"
                android:ems="10"
                android:entries="@array/dropdown_states"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>