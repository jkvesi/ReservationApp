<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".NewReservationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/button_color">

            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/baseline_home_24"
                tools:layout_editor_absoluteX="353dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/toolbarText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/allerta"
                android:padding="17dp"
                android:text="Settings"
                android:textColor="@color/textViewHeader_color"
                android:textSize="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="39dp"
                tools:layout_editor_absoluteY="19dp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/serviceTexytView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/allerta"
                android:padding="15dp"
                android:text="Service"
                android:textColor="@color/textView_color"
                android:textColorHighlight="#2674B3"
                android:textColorLink="#2395C8"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbarText" />

            <Spinner
                android:id="@+id/serviceSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#673AB7"
                android:ems="10"
                android:entries="@array/dropdown_countries"
                android:fontFamily="@font/allerta"
                android:padding="15dp"
                android:textColor="#F8F7F7"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/typeServiceTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/allerta"
                android:padding="15dp"
                android:text="Type of service"
                android:textColor="@color/textView_color"
                android:textColorHighlight="#2674B3"
                android:textColorLink="#2395C8"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbarText" />

            <Spinner
                android:id="@+id/typeServiceSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#673AB7"
                android:ems="10"
                android:entries="@array/dropdown_countries"
                android:fontFamily="@font/allerta"
                android:padding="15dp"
                android:textColor="#F8F7F7"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/countryTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/allerta"
                android:padding="15dp"
                android:text="Country"
                android:textColor="@color/textView_color"
                android:textColorHighlight="#2674B3"
                android:textColorLink="#2395C8"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbarText" />

            <Spinner
                android:id="@+id/countrySpinnerItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#673AB7"
                android:ems="10"
                android:fontFamily="@font/allerta"
                android:padding="15dp"
                android:textColor="#C60B0B"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cityTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/allerta"
                android:padding="15dp"
                android:text="City"
                android:textColor="@color/textView_color"
                android:textColorHighlight="#2674B3"
                android:textColorLink="#2395C8"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbarText" />

            <Spinner
                android:id="@+id/citySpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#673AB7"
                android:ems="10"
                android:entries="@array/dropdown_countries"
                android:fontFamily="@font/allerta"
                android:padding="15dp"
                android:textColor="#F8F7F7"
                android:textSize="20sp" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>