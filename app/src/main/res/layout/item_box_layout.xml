<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_anchorGravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_shape"
        android:orientation="horizontal"
        android:padding="2dp">

        <TextView
            android:id="@+id/companyDisplay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#84638E"
            android:fontFamily="@font/allerta"
            android:paddingBottom="5dp"
            android:text="Company name"
            android:textColor="@color/textView_color"
            android:textColorHighlight="#2674B3"
            android:textColorLink="#2395C8"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/serviceDisplay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#84638E"
            android:fontFamily="@font/allerta"
            android:paddingBottom="5dp"
            android:text="Company name"
            android:textColor="@color/textView_color"
            android:textColorHighlight="#2674B3"
            android:textColorLink="#2395C8"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/serviceTypeDisplay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#84638E"
            android:fontFamily="@font/allerta"
            android:paddingBottom="5dp"
            android:text="Serviceeee"
            android:textColor="@color/textView_color"
            android:textColorHighlight="#2674B3"
            android:textColorLink="#2395C8"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#B19FB6"
            android:text="Edit"
            android:textSize="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textSize="15dp"
            android:backgroundTint="#B19FB6"/>
    </LinearLayout>
</LinearLayout>

